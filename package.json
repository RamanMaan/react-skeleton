    "stylelint-prettier": "^1.1.1",
    "webpack": "^4.41.2"
  },
  "peerDependencies": {
    "react": "^16.x",
    "react-dom": "^16.x",
    "styled-components": "^5.0.1"
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  },
